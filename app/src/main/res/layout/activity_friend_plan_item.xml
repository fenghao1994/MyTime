<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_friend_plan_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mytime.mvp.ui.activity.FriendPlanItemActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:navigationIcon="@drawable/back_white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/logoGreen"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享计划"
                android:textSize="16sp"
                android:textColor="#FFF"
                />

            <ImageView
                android:id="@+id/pinglun_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pinglun_list"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="16dp"
        android:minHeight="60dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划标题  "
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/logoGreen"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_bg"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:enabled="false"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:minHeight="60dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划内容  "
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/logoGreen"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_bg"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:enabled="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:minHeight="60dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒时间  "
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/logoGreen"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_bg"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:enabled="false"
            />
    </LinearLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:numColumns="3"
        android:layout_weight="1"
        ></GridView>

    <LinearLayout
        android:id="@+id/pinglun_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_corner"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:hint="写评论"
            android:gravity="center"
            android:textSize="18sp"
            />

    </LinearLayout>

</LinearLayout>
