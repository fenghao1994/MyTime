<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:id="@+id/card_view"
    >
    <LinearLayout
        android:id="@+id/alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="160dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/header_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/head_img"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                />
            <ImageView
                android:id="@+id/plan_item_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gou"
                android:layout_below="@id/header_img"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/plan_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计划子项标题计划子项标题计划子项标题计划子项标题计划子项标题"
                    android:textSize="20sp"
                    android:layout_marginRight="40dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/plan_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提醒内容"
                    android:textSize="16sp"
                    android:layout_marginRight="40dp"
                    android:maxLines="5"
                    android:ellipsize="end"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                >

                <ImageView
                    android:id="@+id/pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pinglun"
                    />

                <TextView
                    android:id="@+id/plan_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.12.12 10:10"
                    android:gravity="center_vertical|right"
                    android:paddingRight="20dp"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:src="@drawable/time"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@id/plan_item_time"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
